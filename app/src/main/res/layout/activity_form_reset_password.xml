<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity">

    <ImageView
        android:id="@+id/login_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/repass"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_emailer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/a"
        android:text="Email"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvtype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/a"
        android:paddingLeft="25dp"
        android:text="Type your new password"
        android:textSize="25dp"

        />

    <EditText
        android:id="@+id/input_pass_formResetPass"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tvtype"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@drawable/keylog"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp" />

    <TextView
        android:id="@+id/tvRetype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/a"
        android:paddingLeft="25dp"
        android:text="Re-type your new password"
        android:textSize="25dp"

        />

    <EditText
        android:id="@+id/input_Repass_formResetPass"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tvRetype"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@drawable/keylog"
        android:drawablePadding="10dp"
        android:hint="Re-type password"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp" />


    <Button
        android:id="@+id/btn_update_pass"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_Repass_formResetPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#0A9A10"
        android:fontFamily="@font/a"
        android:padding="8dp"
        android:text="Update"
        android:textSize="22dp"
        android:textStyle="bold"
        app:backgroundTint="@null" />

    <TextView
        android:id="@+id/tv_loginNow_form_resetPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_update_pass"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/a"
        android:text="Switch to Login"
        android:textAlignment="center"
        android:textColor="#2C3FBD"
        android:textSize="30dp"
        android:textStyle="bold" />

</RelativeLayout>