<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <ImageView
        android:id="@+id/reg_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/regbg" />

    <EditText
        android:id="@+id/name"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@+id/reg_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:hint="Name" />

    <EditText
        android:id="@+id/email_reg"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@drawable/account"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:hint="Email" />

    <EditText
        android:id="@+id/password_reg"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@+id/email_reg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@drawable/keylog"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:hint="Password" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_reg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#32CD32"
        android:fontFamily="@font/a"
        android:padding="10dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="25dp"
        android:textStyle="bold"
        app:backgroundTint="@null" />

    <TextView
        android:id="@+id/have_an_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/a"
        android:text="Already have an account?"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/have_an_account"
        android:fontFamily="@font/a"
        android:paddingLeft="10dp"
        android:text="Sign In"
        android:textColor="#006400"
        android:textSize="20dp"
        android:textStyle="bold" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressbar"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:layout_below="@+id/have_an_account"/>

</RelativeLayout>
