<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity">

    <ImageView
        android:id="@+id/login_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/repass"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="230dp"
        android:fontFamily="@font/a"
        android:text="RESET PASSWORD"
        android:textAlignment="center"
        android:textSize="33dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvtype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/a"
        android:text="Type your email account address"
        android:textAlignment="center"
        android:textSize="25dp"

        />

    <EditText
        android:id="@+id/input_email_forgotPass"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tvtype"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@drawable/account"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp" />


    <TextView
        android:id="@+id/tvOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_email_forgotPass"
        android:layout_alignParentTop="true"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/a"
        android:paddingLeft="20dp"
        android:text="Type OTP"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/OTP"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvOTP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/edittext_background"
        android:drawablePadding="10dp"
        android:fontFamily="@font/a"
        android:hint="OTP"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_sendOTP"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OTP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#0A9A10"
        android:padding="8dp"
        android:text="Send OTP"
        android:textAllCaps="true"
        android:textSize="22dp"
        android:textStyle="bold"
        app:backgroundTint="@null" />

    <TextView
        android:id="@+id/tv_loginNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_sendOTP"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/a"
        android:text="Switch to Login"
        android:textAlignment="center"
        android:textColor="#294CB6"
        android:textSize="30dp"
        android:textStyle="bold" />

</RelativeLayout>